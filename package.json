{
  "name": "url_shortner",
  "version": "1.0.0",
  "description": "A UrlShortner Service Based on Node Js, Express, MongoDb, GraphQL, Redis",
  "main": "index.js",
  "author": "Raghuram Kumar <raghuk46@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist",
    "precommit": "lint-staged",
    "prepush": "yarn test",
    "copy-env": "copyfiles -a .env dist",
    "build-server": "babel src -d dist --source-maps --copy-files --ignore node_modules",
    "build": "cross-env NODE_ENV=production yarn run clean && yarn run build-server && yarn run copy-env ",
    "start": "node ./dist/server.js",
    "dev": "cross-env NODE_ENV=dev nodemon  ./src/server.js --exec babel-node --watch src --ignore '*.test.js'",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit",
    "eslint": "eslint src/**"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma es5 --write",
      "eslint --fix --quiet",
      "git add --force"
    ]
  },
  "dependencies": {
    "dotenv": "^6.1.0",
    "express-rate-limit": "^3.3.0",
    "faker": "^4.1.0",
    "glob": "^7.1.3",
    "graphql-tools": "^4.0.3",
    "graphql-yoga": "^1.16.7",
    "helmet": "^3.14.0",
    "ioredis": "^4.2.0",
    "lodash": "^4.17.11",
    "merge-graphql-schemas": "^1.5.7",
    "mongoose": "^5.3.10",
    "mongoose-unique-validator": "^2.0.2",
    "node-fetch": "^2.2.1",
    "rate-limit-redis": "^1.5.0",
    "request-promise": "^4.2.2",
    "shortid": "^2.2.14",
    "valid-url": "^1.0.9",
    "validator": "^10.8.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.27.2",
    "eslint-plugin-node": "^8.0.0",
    "graphql-tester": "^0.0.5",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "jest-environment-node": "^23.4.0",
    "lint-staged": "^8.0.4",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.1",
    "regenerator-runtime": "^0.12.1"
  }
}
